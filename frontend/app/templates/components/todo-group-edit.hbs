<div class='todo-group'>
  <h3 class='todo-group-title'>
    <button {{action 'delete'}}>X</button>
    {{#unless editingTitle }}
      <span {{action "editTitle"}}>{{group.title}}</span>
    {{else}}
      {{input-autofocus
        value=group.title
        autofocus="autofocus"
        enter="saveTitle"
        focus-out="saveTitle"
      }}
    {{/unless}}
  </h3>
  <ul class='todo-items'>
    {{#each group.items as |item|}}
      {{todo-item-edit item=item}}
    {{/each}}
    <li>
      {{input
        type="text"
        placeholder="Create a new todo"
        value=newItemTitle
        enter="newItem"
      }}
    </li>
  </ul>
</div>
