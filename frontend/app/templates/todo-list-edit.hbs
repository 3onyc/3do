<h1 class='page-title'>{{model.title}}</h1>
{{#link-to 'todo-list' model}}
  Back
{{/link-to}}

{{#each model.groups as |group|}}
  {{todo-group-edit group=group action="createTodoItem"}}
{{/each}}
<h2>
  {{input
    type="text"
    id="new-todo-group"
    placeholder="Create a new group"
    value=newGroupTitle
    enter="createTodoGroup"
  }}
</h2>
